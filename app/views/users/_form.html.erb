<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error_message', object: @user %>
      <%= form_with model: @user, class: "shadow p-3 mb-3 bg-success rounded", local: true do |f| %>
        <div class="row mb-3">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

         <div class="row mb-3">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password_confirmation, class: "form-control shadow rounded", placeholder: "Enter your password confirmation" %>
          </div>
        </div>

        <div class="d-grid gap-2 col-3 mx-auto">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>

    <div class="mb-3 text-center">
      <%= link_to '[ Return to articles listing ]', articles_path, class: "text-success" %>
    </div>
  </div>
</div>
