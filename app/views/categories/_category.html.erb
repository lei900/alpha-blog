<div class="row justify-content-center ">
  <div class="col-8 mt-4 ">
    <div class="card text-center shadow mb-3 bg-body rounded">
      <div class="card-body">
        <h5 class="card-title"><%= link_to category.name, category_path(category), class: "link-success text-decoration-none" %></h5>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(category.created_at) %> ago, edited <%= time_ago_in_words(category.updated_at) %> ago</small>
      </div>
    </div>
  </div>
</div>
