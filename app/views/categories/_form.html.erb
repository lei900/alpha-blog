<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error_message', object: category %>
      <%= form_with model: category, class: "shadow p-3 mb-3 bg-success rounded", local: true do |f| %>
        <div class="row mb-3">
          <%= f.label :name, " Category name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name" %>
          </div>
        </div>

        <div class="d-grid gap-2 col-3 mx-auto">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>

    <div class="mb-3 text-center">
      <%= link_to '[ Return to articles listing ]', articles_path, class: "text-success" %>
    </div>
  </div>
</div>
