<h1>Articles listing page</h1>

<table>
    <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3" >Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
          <%= render 'article', article: article %>
        <% end %>
    </tbody>
</table>

<p>
